<!DOCTYPE html>
<html>
<head>
  <title>Déjàvis - {{title}}</title>
  
  <!-- loads scripts specified in manifest.json -->
  {{#scripts}}
  <script src="{{dir}}{{.}}"></script>
  {{/scripts}}
  
  <link href="/stylesheets/application.css" media="screen" rel="stylesheet" type="text/css" />
  
  <!-- loads additional styles specified in manifest.json -->
  {{#styles}}
  <link href="{{dir}}{{.}}" media="screen" rel="stylesheet" type="text/css" />
  {{/styles}}
</head>
<body>
  <div id="header">
    <div id="title">
      <h1><a href="/">Déjàvis</a></h1>
      <span id="subtitle">Datavis Exhibts</span>
    </div>
    
    <div id="meta">
      <div class="meta-group title left">
        <h2>{{title}}</h2><span>{{version}}</span>
      </div>
      
      <div class="meta-group description left">
        <div class="label">Description</div>
        <div class="descr">{{descr}}</div>
      </div>
      <div class="meta-group">
        <div class="label">Links</div>
        <div class="value"><a href="{{github_url}}">Source</a></div>
        <br class="clear"/>
        <div class="value"></div>
        <br class="clear"/>
      </div>
      <div class="meta-group">
        <div class="label">Author</div>
        <div class="value"><a href="{{author_homepage}}">{{author}}</a></div>
        <br class="clear"/>
        <div class="label">Published</div>
        <div class="value">{{published_on}}</div>
        <br class="clear"/>
        <div class="label">Framework</div>
        <div class="value"><a href="{{framework_url}}">{{framework_name}}</a></div>
      </div>
    </div>
  </div>
  
  <div id="canvas">
    
  </div>
  <div id="sidebar">
    
  </div>
  {{#hosted}}
  <script type="text/javascript">

    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-18430895-1']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();

  </script>
  {{/hosted}}
</body>
</html>
